{

    "manifest_version": 2,
    "name": "Reversify",
    "version": "1.0",
  
    "description": "A tool for reverse engineering webpages. Downloads and beautifies js files loaded to the page.",
    "homepage_url": "https://github.com/lupus-magnus?tab=repositories",
    "icons": {
      "48": "public/icons/48.png"
    },
  
    "permissions": [
      "activeTab",
      "devtools",
      "downloads",
      "webRequest",
      "browsingData"
    ],
  
    "browser_action": {
      "default_icon": "public/icons/32.png",
      "default_title": "Reversify",
      "default_popup": "views/popup/index.html"
    },

    "background":{
      "page": "pages/backgroundPage.html"
    }
  
  
  
  }
  